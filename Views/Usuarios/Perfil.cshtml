@model Inventarios.Models.PerfilViewModel
@{
    ViewData["Title"] = "Mi perfil";
}

<div class="container py-3">
    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow-sm mb-3">
                <div class="card-body">
                    <h1 class="h3 mb-3">Mi perfil</h1>
                    <p class="text-muted mb-4">Informaci√≥n de tu cuenta</p>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Id</dt>
                        <dd class="col-sm-8">@Model.Id</dd>

                        <dt class="col-sm-4">Usuario</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Correo</dt>
                        <dd class="col-sm-8">@Model.Correo</dd>

                        <dt class="col-sm-4">Rol</dt>
                        <dd class="col-sm-8"><span class="badge bg-primary">@Model.Rol</span></dd>
                    </dl>
                    <div class="mt-4">
                        <a class="btn btn-success" asp-action="EditarPerfil">Editar perfil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
