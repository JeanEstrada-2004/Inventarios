@model Inventarios.Models.UsuarioRolViewModel
@{
    ViewData["Title"] = "Eliminar usuario";
}

<h1>Eliminar usuario</h1>

<div class="alert alert-danger">
    Esta acción eliminará al usuario de forma permanente.
</div>

<table class="table table-bordered w-auto">
    <tr><th>Id</th><td>@Model.Id</td></tr>
    <tr><th>Correo</th><td>@Model.Correo</td></tr>
    <tr><th>Roles</th><td>@string.Join(", ", Model.Roles)</td></tr>
</table>

<form asp-action="Eliminar" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
