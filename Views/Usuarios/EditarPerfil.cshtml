@model Inventarios.Models.PerfilEditarViewModel
@{
    ViewData["Title"] = "Editar Perfil";
}

<!-- HEADER -->
<div class="mb-4">
    <h1>‚úèÔ∏è Editar Perfil</h1>
    <p class="text-muted">Actualiza tu informaci√≥n personal</p>
</div>

<!-- FORMULARIO -->
<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong>üìù Informaci√≥n del Perfil</strong>
            </div>
            <div class="card-body">
                <form asp-action="GuardarPerfil" method="post" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <!-- Validaci√≥n -->
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>‚ö†Ô∏è Errores encontrados:</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>

                    <!-- Usuario -->
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label">üë§ Nombre de Usuario</label>
                        <input asp-for="UserName" class="form-control form-control-lg" placeholder="Tu nombre de usuario" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Correo -->
                    <div class="form-group mb-4">
                        <label asp-for="Correo" class="form-label">üìß Correo Electr√≥nico</label>
                        <input asp-for="Correo" class="form-control form-control-lg" type="email" placeholder="tu@email.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <!-- Botones -->
                    <div class="d-flex gap-2">
                        <a class="btn btn-secondary flex-grow-1" asp-action="Perfil">
                            ‚Üê Cancelar
                        </a>
                        <button type="submit" class="btn btn-success flex-grow-1">
                            üíæ Guardar Cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
