                    <div class="form-group mb-3">
                        <label asp-for="Marca" class="form-label">ğŸ¯ Marca</label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </fieldset>

                <!-- SECCIÃ“N: UBICACIÃ“N Y CANTIDAD -->
                <fieldset class="mb-4 p-3 border rounded bg-light">
                    <legend class="mb-3">ğŸ“ UbicaciÃ³n y Cantidad</legend>

