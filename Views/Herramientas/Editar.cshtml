                <!-- SECCIÃ“N: INFORMACIÃ“N BÃSICA -->
                <fieldset class="mb-4 p-3 border rounded bg-light">
                    <legend class="mb-3">ğŸ“ InformaciÃ³n BÃ¡sica</legend>

                    <!-- CÃ³digo -->
                    <div class="form-group mb-3">
                        <label asp-for="Codigo" class="form-label">ğŸ“¦ CÃ³digo</label>
                        <input asp-for="Codigo" class="form-control" 
                               placeholder="Ej: HERR-001" required />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group mb-3">
                        <label asp-for="Nombre" class="form-label">ğŸ·ï¸ Nombre</label>
                        <input asp-for="Nombre" class="form-control" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

