@model Inventarios.Models.Prestamo
@{
    ViewData["Title"] = "Confirmar Devoluci√≥n de Herramienta";
    var zonaLima = TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time");
    var inicioLocal = TimeZoneInfo.ConvertTimeFromUtc(DateTime.SpecifyKind(Model.FechaPrestamo, DateTimeKind.Utc), zonaLima);
    DateTime? devolucionLocal = Model.FechaDevolucion.HasValue
        ? TimeZoneInfo.ConvertTimeFromUtc(DateTime.SpecifyKind(Model.FechaDevolucion.Value, DateTimeKind.Utc), zonaLima)
        : null;
    var ahoraLocal = TimeZoneInfo.ConvertTimeFromUtc(DateTime.UtcNow, zonaLima);
    var duracion = ahoraLocal - inicioLocal;
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="mb-4">
            <h1>‚úÖ Confirmar Devoluci√≥n</h1>
            <p class="text-muted">Procesar la devoluci√≥n de la herramienta prestada</p>
        </div>

        <div class="alert alert-info alert-lg" role="alert">
            <h4 class="alert-heading">‚ÑπÔ∏è Proceso de Devoluci√≥n</h4>
            <ul class="mb-0">
                <li>La herramienta se marcar√° como disponible</li>
                <li>El pr√©stamo se cerrar√° y se registrar√° el historial</li>
                <li>Se actualizar√° autom√°ticamente el inventario</li>
            </ul>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <strong>üì¶ Detalles del Pr√©stamo</strong>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <strong>üë§ Usuario:</strong>
                        <p>@(Model.Usuario?.UserName ?? Model.Usuario?.Email ?? "Usuario desconocido")</p>
                    </div>
                    <div class="col-md-6">
                        <strong>üìÖ Fecha Pr√©stamo:</strong>
                        <p>@inicioLocal.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>

                <div class="mb-3">
                    <strong>üîß Herramientas Prestadas:</strong>
                    @if (Model.Detalles?.Count > 0)
                    {
                        <div class="list-group mt-2">
                            @foreach (var detalle in Model.Detalles)
                            {
                                <div class="list-group-item">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <strong>@detalle.HerramientaUnidad?.Herramienta?.Nombre</strong><br>
                                            <small class="text-muted">C√≥digo: @detalle.HerramientaUnidad?.Herramienta?.Codigo</small>
                                        </div>
                                        <div class="col-md-6">
                                            <strong>Estado Actual:</strong><br>
                                            @{
                                                var estadoBadge = detalle.HerramientaUnidad?.Estado switch
                                                {
                                                    Inventarios.Models.EstadoHerramientaUnidad.Disponible => "badge-disponible",
                                                    Inventarios.Models.EstadoHerramientaUnidad.Prestada => "badge-prestada",
                                                    Inventarios.Models.EstadoHerramientaUnidad.Danada => "badge-danada",
                                                    _ => "badge-secondary"
                                                };
                                            }
                                            <span class="@estadoBadge">@detalle.HerramientaUnidad?.Estado</span>
                                            @if (!string.IsNullOrEmpty(detalle.HerramientaUnidad?.Observacion))
                                            {
                                                <br /><small class="text-muted">@detalle.HerramientaUnidad?.Observacion</small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>üìä Estado Actual:</strong>
                        <p><span class="badge badge-warning">@Model.Estado</span></p>
                    </div>
                    <div class="col-md-6">
                        <strong>‚è±Ô∏è Duraci√≥n:</strong>
                        <p>
                            @(duracion.Days > 0
                                ? $"{duracion.Days} d√≠a(s) {duracion.Hours} hora(s)"
                                : $"{duracion.Hours} hora(s) {duracion.Minutes} minuto(s)")
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <strong>‚úì Confirmaci√≥n de Devoluci√≥n</strong>
            </div>
            <div class="card-body">
                <form asp-action="ConfirmarDevolucion" method="post" id="confirmForm">
                    <input type="hidden" asp-for="Id" />

                    <fieldset class="mb-4">
                        <legend class="mb-3">üîç Estado de la(s) Herramienta(s):</legend>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" id="estadoOk" name="estadoHerramienta" value="ok" checked required>
                            <label class="form-check-label" for="estadoOk">
                                ‚úÖ <strong>Excelente</strong> - La herramienta est√° en perfecto estado
                            </label>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" id="estadoLeve" name="estadoHerramienta" value="leve">
                            <label class="form-check-label" for="estadoLeve">
                                ‚ö†Ô∏è <strong>Desgaste Leve</strong> - Desgaste normal por uso
                            </label>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" type="radio" id="estadoDanio" name="estadoHerramienta" value="danio">
                            <label class="form-check-label" for="estadoDanio">
                                üî¥ <strong>Da√±o Significativo</strong> - Requiere reparaci√≥n o reemplazo
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="radio" id="estadoPerdida" name="estadoHerramienta" value="perdida">
                            <label class="form-check-label" for="estadoPerdida">
                                ‚ùå <strong>P√©rdida Total</strong> - La herramienta se perdi√≥
                            </label>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="mb-3">üìù Observaciones (Opcional):</legend>
                        <textarea class="form-control" name="observaciones" placeholder="Detalla cualquier problema encontrado, reparaci√≥n realizada, etc." rows="3"></textarea>
                    </fieldset>

                    <div class="form-check mb-4">
                        <input class="form-check-input" type="checkbox" id="acceptConfirm" required>
                        <label class="form-check-label" for="acceptConfirm">
                            <strong>Confirmo que la(s) herramienta(s) ha(n) sido devuelta(s) y el estado registrado es correcto</strong>
                        </label>
                    </div>

                    <div class="d-flex gap-2 justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            ‚Üê Cancelar
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            ‚úÖ Confirmar Devoluci√≥n
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <div class="alert alert-danger" role="alert">
            <h6 class="alert-heading">‚ö†Ô∏è Importante:</h6>
            <p class="mb-0">
                Al confirmar esta devoluci√≥n, se asume responsabilidad sobre el estado registrado.
                El sistema no permitir√° cambios posteriores a este registro.
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('acceptConfirm').addEventListener('change', function() {
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.disabled = !this.checked;
        });
        document.addEventListener('DOMContentLoaded', function() {
            const submitBtn = document.querySelector('button[type="submit"]');
            submitBtn.disabled = !document.getElementById('acceptConfirm').checked;
        });
        document.getElementById('confirmForm').addEventListener('submit', function(e) {
            const estadoSeleccionado = document.querySelector('input[name="estadoHerramienta"]:checked')?.value;
            if (estadoSeleccionado === 'danio' || estadoSeleccionado === 'perdida') {
                const confirmar = window.confirm(
                    '‚ö†Ô∏è ATENCI√ìN:\n\n' +
                    'Has indicado que la herramienta tiene da√±o o se perdi√≥.\n\n' +
                    '¬øEst√°s seguro de registrar este estado?\n\n' +
                    'Esto puede afectar inventarios y responsabilidades.'
                );
                if (!confirmar) e.preventDefault();
            }
        });
    </script>
}
