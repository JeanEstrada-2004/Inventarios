@model Inventarios.Models.PrestamoCrearViewModel
@{
    ViewData["Title"] = "Registrar Pr√©stamo";
}

<!-- HEADER -->
<div class="mb-4">
    <h1>üì¶ Registrar Nuevo Pr√©stamo</h1>
    <p class="text-muted">Solicita herramientas disponibles del inventario</p>
</div>

@if (Model.HerramientasDisponibles.Count == 0)
{
    <!-- SIN HERRAMIENTAS DISPONIBLES -->
    <div class="alert alert-warning alert-lg text-center p-5" role="alert">
        <h4>‚ö†Ô∏è Sin Disponibilidad</h4>
        <p class="mb-3">No hay herramientas disponibles en este momento.</p>
        <a asp-action="Index" class="btn btn-secondary">
            ‚Üê Volver
        </a>
    </div>
}
else
{
    <!-- FORMULARIO DE SELECCI√ìN Y REGISTRO -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <strong>üîç Seleccionar Herramienta</strong>
                </div>
                <div class="card-body">
                    <!-- Filtros -->
                    <form asp-action="Crear" method="get" class="mb-4">
                        <div class="row g-2">
                            <div class="col-md-5">
                                <label asp-for="Estante" class="form-label">üìç Filtrar por Estante</label>
                                <select asp-for="Estante" asp-items="Model.Estantes" class="form-select" onchange="this.form.submit()">
                                    <option value="">-- Todos --</option>
                                </select>
                            </div>
                            <div class="col-md-7">
                                <label asp-for="HerramientaId" class="form-label">üîß Seleccionar Herramienta</label>
                                <select asp-for="HerramientaId" asp-items="Model.HerramientasDisponibles" class="form-select" onchange="this.form.submit()">
                                    <option value="">-- Elige una herramienta --</option>
                                </select>
                            </div>
                        </div>
                    </form>

                    <!-- Informaci√≥n de disponibilidad -->
                    @if (Model.HerramientaId != Guid.Empty)
                    {
                        <div class="alert alert-info">
                            <strong>‚úÖ Disponibles:</strong> @Model.DisponiblesHerramienta unidades
                        </div>
                    }
                </div>
            </div>

            <!-- FORMULARIO DE CREACI√ìN -->
                @if (Model.HerramientaId != Guid.Empty)
                {
                    <div class="card">
                        <div class="card-header">
                            <strong>üìã Detalles del Pr√©stamo</strong>
                        </div>
                    <div class="card-body">
                        <form asp-action="Crear" method="post" novalidate>
                            <!-- Validaci√≥n -->
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show" role="alert">
                                <strong>‚ö†Ô∏è Errores encontrados:</strong>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>

                            <input type="hidden" asp-for="Estante" />
                            <input type="hidden" asp-for="HerramientaId" />

                            <!-- Cantidad -->
                            <div class="form-group mb-4">
                                <label asp-for="Cantidad" class="form-label">üìä Cantidad a Prestar</label>
                                <input asp-for="Cantidad" class="form-control form-control-lg" type="number" min="1" 
                                       max="@(Model.DisponiblesHerramienta > 0 ? Model.DisponiblesHerramienta : 1)" 
                                       value="1" />
                                <small class="form-text text-muted d-block mt-2">
                                    M√°ximo disponible: @Model.DisponiblesHerramienta unidades
                                </small>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>

                            <!-- Botones -->
                            <div class="d-flex gap-2">
                                <a class="btn btn-secondary flex-grow-1" asp-action="Index">
                                    ‚Üê Cancelar
                                </a>
                                <button type="submit" class="btn btn-success flex-grow-1">
                                    ‚úÖ Registrar Pr√©stamo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- INFO LATERAL -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <strong>‚ÑπÔ∏è Informaci√≥n</strong>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>üì¶ Total Disponible:</strong></p>
                    <p class="h5 text-success mb-4">@Model.HerramientasDisponibles.Count</p>

                    <p class="mb-2"><strong>‚öôÔ∏è Pasos:</strong></p>
                    <ol class="small">
                        <li>Selecciona un estante (opcional)</li>
                        <li>Elige la herramienta</li>
                        <li>Ingresa la cantidad</li>
                        <li>Confirma el pr√©stamo</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
