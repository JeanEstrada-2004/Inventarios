@model Inventarios.Models.Prestamo
@{
    ViewData["Title"] = "Detalle de Pr√©stamo";
    var zonaLima = TimeZoneInfo.FindSystemTimeZoneById("SA Pacific Standard Time");
    var inicioLocal = TimeZoneInfo.ConvertTimeFromUtc(DateTime.SpecifyKind(Model.FechaPrestamo, DateTimeKind.Utc), zonaLima);
    DateTime? devolucionLocal = Model.FechaDevolucion.HasValue
        ? TimeZoneInfo.ConvertTimeFromUtc(DateTime.SpecifyKind(Model.FechaDevolucion.Value, DateTimeKind.Utc), zonaLima)
        : null;
    var estadoIcon = Model.Estado == EstadoPrestamo.Activo ? "üü¢" :
                     Model.Estado == EstadoPrestamo.DevueltoPendiente ? "üü°" : "‚úÖ";
    var estadoBadgeClass = Model.Estado == EstadoPrestamo.Activo ? "badge bg-success text-white" :
                           Model.Estado == EstadoPrestamo.DevueltoPendiente ? "badge bg-warning text-dark" : "badge bg-secondary text-white";
}

<!-- HEADER -->
<div class="mb-4">
    <h1>üì¶ Detalle del Pr√©stamo</h1>
    <p class="text-muted">Informaci√≥n completa del pr√©stamo</p>
</div>

<!-- INFORMACI√ìN PRINCIPAL -->
<div class="row mb-4">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong>üë§ Informaci√≥n del Pr√©stamo</strong>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h6 class="text-muted">üë§ Usuario</h6>
                    <p class="h6">@(Model.Usuario?.UserName ?? Model.Usuario?.Email ?? "Usuario desconocido")</p>
                </div>

                <div class="mb-4">
                    <h6 class="text-muted">üìÖ Fecha de Pr√©stamo</h6>
                    <p class="h6">@inicioLocal.ToString("dd/MM/yyyy HH:mm")</p>
                </div>

                @if (devolucionLocal.HasValue)
                {
                    <div class="mb-4">
                        <h6 class="text-muted">üìÖ Fecha de Devoluci√≥n</h6>
                        <p class="h6">@devolucionLocal.Value.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                }

                <div>
                    <h6 class="text-muted">üìä Estado</h6>
                    <p><span class="@estadoBadgeClass">@estadoIcon @Model.Estado</span></p>
                </div>
            </div>
        </div>
    </div>

    <!-- HERRAMIENTAS -->
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <strong>üîß Herramientas Prestadas (@Model.Detalles?.Count ?? 0)</strong>
            </div>
            <div class="card-body">
                @if (Model.Detalles?.Count > 0)
                {
                    <div class="list-group">
                        @foreach (var d in Model.Detalles)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">@d.HerramientaUnidad?.Herramienta?.Nombre</h6>
                                        <small class="text-muted">
                                            üì¶ @d.HerramientaUnidad?.Herramienta?.Codigo
                                        </small>
                                    </div>
                                    <span class="badge bg-light text-dark">@d.HerramientaUnidad?.Etiqueta</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Sin herramientas registradas</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- BOTONES DE ACCI√ìN -->
<div class="d-flex gap-2">
    <a class="btn btn-secondary" asp-action="Index">
        ‚Üê Volver al Listado
    </a>
    @if (Model.Estado == EstadoPrestamo.Activo)
    {
        <form asp-action="SolicitarDevolucion" asp-route-id="@Model.Id" method="post" style="display: inline;">
            <button type="submit" class="btn btn-warning" onclick="return confirm('¬øConfirmas la solicitud de devoluci√≥n?')">
                ‚Ü©Ô∏è Solicitar Devoluci√≥n
            </button>
        </form>
    }
</div>
